{% extends 'base.html.twig' %}

{% block title %}Episode
{% endblock %}

{% block body %}
	<div class="container">
		<div class="row justify-content-center">
			<div class="col-8 border border-1 border-dark bg-light shadow rounded mt-5 p-3">
				<h1>Episode</h1>

				<table class="table">
					<tbody>
						<tr>
							<th>Id</th>
							<td>{{ episode.id }}</td>
						</tr>
						<tr>
							<th>Title</th>
							<td>{{ episode.title }}</td>
						</tr>
						<tr>
							<th>Number</th>
							<td>{{ episode.number }}</td>
						</tr>
						<tr>
							<th>Synopsis</th>
							<td>{{ episode.synopsis }}</td>
						</tr>
					</tbody>
				</table>

				<div class="row justify-content-between">
					<div class="col-3 text-center">
						<a href="{{ path('episode_index') }}" class="btn btn-dark">back to list</a>
					</div>
					<div class="col-3 text-center">
						<a href="{{ path('episode_edit', {'id': episode.id}) }}" class="btn btn-success w-50">edit</a>
					</div>
					<div class="col-3 text-center">
						{{ include('episode/_delete_form.html.twig') }}
					</div>
				</div>
			</div>
		</div>
	{% endblock %}
