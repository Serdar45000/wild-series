{% extends 'base.html.twig' %}
{% block title %}All programs
{% endblock %}

{% block body %}
	<div class="container">
		<h1>Choisissez votre cat&eacute;gorie :
		</h1>
		{% for category in categories %}
			<div class="m-5">
				<h2>{{ loop.index }}
					-
					{{ category.name }}</h2>
				<a href="{{ path("category_show", { categoryName: category.name }) }}">
					{{ category.name }}
				</a>
			</div>
		{% else %}
			Aucune catégorie trouvée.
		{% endfor %}

		<a href="{{ path('app_index') }}" class="flex d-flex justify-content-end">
			<div class="btn btn-dark m-2">
				Retour Accueil
			</div>
		</a>
	</div>
{% endblock %}
