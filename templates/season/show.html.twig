{% extends 'base.html.twig' %}

{% block title %}Season
{% endblock %}

{% block body %}
	<div class="container">
		<div class="row justify-content-center">
			<div class="col-8 border border-1 border-dark bg-light shadow rounded mt-5 p-3">
				<h1>Season</h1>

				<table class="table">
					<tbody>
						<tr>
							<th>Id</th>
							<td>{{ season.id }}</td>
						</tr>
						<tr>
							<th>Number</th>
							<td>{{ season.number }}</td>
						</tr>
						<tr>
							<th>Year</th>
							<td>{{ season.year }}</td>
						</tr>
						<tr>
							<th>Description</th>
							<td>{{ season.description }}</td>
						</tr>
					</tbody>
				</table>
				<div class="row justify-content-between">
					<div class="col-3 text-center">
						<a href="{{ path('season_index') }}" class="btn btn-dark">back to list</a>
					</div>
					<div class="col-3 text-center">
						<a href="{{ path('season_edit', {'id': season.id}) }}" class="btn btn-success w-50">edit</a>
					</div>
					<div class="col-3 text-center">
						{{ include('season/_delete_form.html.twig') }}
					</div>
				</div>
			</div>
		</div>
	{% endblock %}
