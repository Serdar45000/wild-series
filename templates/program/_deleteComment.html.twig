<form method="post" action="{{ path('program_delete_comment', {'id': comment.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer votre commentaire ?');">
	<div class="justify-content-center mb-5">
		<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ comment.id) }}">
		<button class="btn btn-danger btn-sm col-1 offset-11">Delete</button>
	</div>
</form>
